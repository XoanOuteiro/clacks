{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "clacks crosswalk concept",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "id",
    "slug",
    "title",
    "kind",
    "aliases",
    "parents",
    "mappings"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "id": {
      "type": "string",
      "pattern": "^concept:[a-z0-9][a-z0-9-]*$"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "kind": {
      "type": "string",
      "enum": [
        "root",
        "category",
        "vulnerability",
        "variant"
      ]
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "parents": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^concept:[a-z0-9][a-z0-9-]*$"
      },
      "uniqueItems": true
    },
    "description": {
      "type": "string"
    },
    "deprecated_by": {
      "type": "string",
      "pattern": "^concept:[a-z0-9][a-z0-9-]*$"
    },
    "mappings": {
      "type": "object"
    },
    "severity_baseline": {
      "type": "object"
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}